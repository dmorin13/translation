<!doctype html>
<html>
<head>
    <title>Translation App</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">

          <h2>Translated Message </h2>
          <div id="tMessage" class="tMessage">translated text will appear here</div>
        </div>
        <div class="col-sm-6">
          <h3>Messages</h3>
          <img src="img/translation.gif" alt="translation">
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <!-- Style the message differently when it's been marked read -->
            <li id="<%= messages[i]._id %>" class="message">
              <span>[<%= messages[i].role %>]</span>
              <span><%= messages[i].name %></span>
              <br/>
              <span><%= messages[i].msg %></span>
              <button class="message-translate" data-id="<%= messages[i]._id %>">spanish</button> 
              <% if (messages[i].read) { %> 
                <span><i style="color: green" class="fa fa-check-square-o" aria-hidden="true"></i></span>
              <% } else { %> 
                <span><button class="message-read" data-id="<%= messages[i]._id %>"><i class="fa fa-check-square-o" aria-hidden="true"></i></button></span>
              <% } %> 
              <span><button class="message-delete" data-id="<%= messages[i]._id %>">delete</button></span>
            </li>
          <% } %>
          </ul>

          <h2>Add a message</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" value="teacher" name="role">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="message" name="msg">
            <button type="submit">Submit</button>
          </form>
        </div>
      
        <% } %>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="well">
            <h3><span class="fa fa-user"></span> Local</h3>

            <% if (user.local.email) { %>
                <p>
                    <strong>id</strong>: <%= user._id %><br>
                    <strong>email</strong>: <%= user.local.email %><br>
                    <strong>password</strong>: <%= user.local.password %>
                </p>

                <a href="/unlink/local" class="btn btn-default">Unlink</a>
            <% } else { %>
                <a href="/connect/local" class="btn btn-default">Connect Local</a>
            <% } %>
          </div>
        </div>
      </div>

</div>

<script src="main.js"></script>

</body>
</html>
